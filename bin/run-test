#! /usr/bin/env bash

# DOC: Run the Java test suite in Docker.
export container_id=$(docker ps -aqf "name=civiform-test-support-civiform-1")

source bin/lib.sh
docker::set_project_name_unit_tests

bin/pull-image

bin/sbt-test jacoco
docker cp container_id:/usr/src/server/target/scala-2.13/jacoco/report ./report
bin/remove-test-env
